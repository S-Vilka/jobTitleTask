<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.jobtitletask.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>

    <ComboBox fx:id="languageSelector" onAction="#changeLanguage"/>
    <ListView fx:id="employeeList" />

    <TextField fx:id="keyNameField" />
    <TextField fx:id="translationField" />
    <Button fx:id="saveButton" onAction="#saveTranslation"/>

</VBox>
